<div class="menu">
    <% for (let collectionName in collections) { %>
        <h2 class="nama-menu"><%= collectionName %></h2>
        <div class="menu-container">
            <% collections[collectionName].forEach(item => { %>
                <div class="item-container" data-id="<%= item._id %>" data-collection="<%= collectionName %>" onclick="window.menuModal.openModal('<%= item._id %>', '<%= collectionName %>')">
                    <div class="image-info">
                        <img src="<%= item.image %>" alt="<%= item.name %>" class="item-image" />
                    </div>
                    <div class="item-info">
                        <div class="item-nama"><%= item.name %></div>
                        <div class="item-harga">Rp <%= item.price %></div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } %>
</div>

<!-- Modal -->
<div id="menuModal" class="modal-menu hidden">
    <div class="menu-content">
        <span id="menuModalClose" class="menu-close">&times;</span>
        <div id="menuName"></div>
        <img id="menuImage" src="" alt="menuName" />
        <p id="menuDescription"></p>
        <p id="menuPrice"></p>
        <div class="toggle" id="tipe">
            <p>Hot</p>
            <label class="switch">
                <input type="checkbox">
                <span class="slider"></span>
            </label>
            <p>Iced</p>
        </div>
        <div class="quantity-control">
            <button class="btn-quantity" id="quantityDecrease">-</button>
            <span id="quantity" class="quantity-value">1</span>
            <button class="btn-quantity" id="quantityIncrease">+</button>
        </div>
        <div class="beli" onclick="window.orderManager.addToOrder()">Tambah ke Pesanan</div>
    </div>
</div>
